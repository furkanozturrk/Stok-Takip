
@model StokDataModel.Kategori

@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Güncelle", "Kategori", FormMethod.Post))
{
<div class="form-group">
   

    @Html.HiddenFor(k => k.KategoriId)
    @Html.HiddenFor(k => k.KategoriId, new { @class = "form-control" })

    @Html.LabelFor(k => k.KategoriAd)
    @Html.TextBoxFor(k => k.KategoriAd, new { @class = "form-control" })

    <br />

    <div>

        <button class="btn btn-warning">Kategori Güncelle</button>

    </div>
</div>
}

